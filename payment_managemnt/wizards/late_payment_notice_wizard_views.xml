<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_late_payment_notice_wizard_form" model="ir.ui.view">
            <field name="name">late.payment.notice.wizard.form</field>
            <field name="model">late.payment.notice.wizard</field>
            <field name="arch" type="xml">
                <form string="Send Late Payment Notice">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="invoice_id" readonly="1" options="{'no_open': True}"/>
                            </h1>
                        </div>

                        <group>
                            <group>
                                <field name="email_to" widget="email"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Message" name="message">
                                <field name="message_body"
                                       widget="html"
                                       options="{'style-inline': true}"
                                       placeholder="Enter your custom message here..."/>
                            </page>
                        </notebook>
                    </sheet>

                    <footer>
                        <button string="Send Notice"
                                name="action_send_notice"
                                type="object"
                                class="btn-primary"
                                data-hotkey="q"/>
                        <button string="Cancel"
                                class="btn-secondary"
                                special="cancel"
                                data-hotkey="z"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_late_payment_notice_wizard" model="ir.actions.act_window">
            <field name="name">Send Late Payment Notice</field>
            <field name="res_model">late.payment.notice.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>
