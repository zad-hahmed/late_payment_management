<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">

        <record id="ir_cron_overdue_payment_check" model="ir.cron">
            <field name="name">Daily Overdue Payment Check</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="state">code</field>
            <field name="code">model.send_overdue_payment_notices()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall"
                   eval="(DateTime.now().replace(hour=8, minute=0, second=0) + timedelta(days=1 if DateTime.now().hour >= 8 else 0)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="priority">5</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
